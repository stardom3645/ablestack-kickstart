[Unit]
Description=Blackbox Exporter
After=network-online.target

[Service]
User=root
Restart=on-failure

#Change this line if you download ther

ExecStart=/usr/share/ablestack/ablestack-wall/blackbox-ablestack-wall/blackbox_ablestack-wall \
  --config.file="/usr/share/ablestack/ablestack-wall/blackbox-ablestack-wall/blackbox.yml" \
  --web.listen-address=":3005"

[Install]
WantedBy=multi-user.target
